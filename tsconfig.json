{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": true,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "esModuleInterop": true,
    "paths": {
      "@api": ["apps/api/src"],
      "@api/*": ["apps/api/src/*"],
      "@app/aws": ["libs/aws/src"],
      "@app/aws/*": ["libs/aws/src/*"],
      "@app/shared": ["libs/shared/src"],
      "@app/shared/*": ["libs/shared/src/*"],
      "@app/storage": ["libs/storage/src"],
      "@app/storage/*": ["libs/storage/src/*"],
      "@app/authentication": ["libs/authentication/src"],
      "@app/authentication/*": ["libs/authentication/src/*"],
      "@app/mailing": ["libs/mailing/src"],
      "@app/mailing/*": ["libs/mailing/src/*"],
      "@app/sse": ["libs/sse/src"],
      "@app/sse/*": ["libs/sse/src/*"],
      "@app/database": ["libs/database/src"],
      "@app/database/*": ["libs/database/src/*"],
      "@app/redis": ["libs/redis/src"],
      "@app/redis/*": ["libs/redis/src/*"],
      "@app/socket-io": ["libs/socket-io/src"],
      "@app/socket-io/*": ["libs/socket-io/src/*"],
      "@app/notifications": ["libs/notifications/src"],
      "@app/notifications/*": ["libs/notifications/src/*"],
      "@app/logger": ["libs/logger/src"],
      "@app/logger/*": ["libs/logger/src/*"]
    }
  }
}
